<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="001-createBookTable" author="dvalfrid">
        <createSequence sequenceName="book_sequence" startValue="100"/>

        <createTable tableName="book">
            <column name="id" type="number">
                <constraints nullable="false"/>
            </column>
            <column name="name" type="varchar">
                <constraints nullable="false"/>
            </column>
            <column name="create_time" type="timestamp">
                <constraints nullable="false"/>
            </column>
            <column name="view_able" type="boolean">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addPrimaryKey tableName="book" columnNames="id"/>

    </changeSet>

    <changeSet id="002-createEntryTable" author="dvalfrid">
        <createSequence sequenceName="entry_sequence" startValue="1"/>

        <createTable tableName="entry">
            <column name="id" type="number">
                <constraints nullable="false"/>
            </column>
            <column name="name" type="varchar">
                <constraints nullable="false"/>
            </column>
            <column name="headline" type="varchar">
                <constraints nullable="false"/>
            </column>
            <column name="message" type="clob">
                <constraints nullable="false"/>
            </column>
            <column name="city" type="varchar">
                <constraints nullable="false"/>
            </column>
            <column name="country" type="varchar">
                <constraints nullable="false"/>
            </column>
            <column name="email" type="varchar">
                <constraints nullable="false"/>
            </column>
            <column name="ip" type="varchar">
                <constraints nullable="false"/>
            </column>
            <column name="create_time" type="timestamp">
                <constraints nullable="false"/>
            </column>
            <column name="view_able" type="boolean">
                <constraints nullable="false"/>
            </column>
            <column name="book_id" type="number">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addPrimaryKey tableName="entry" columnNames="id"/>

        <createIndex tableName="entry" indexName="entry_create_time_index">
            <column name="create_time"/>
        </createIndex>
    </changeSet>

    <changeSet id="003-adding-test-book" author="dvalfrid">
        <insert tableName="book">
            <column name="id" value="10" />
            <column name="name" value="Test Book"/>
            <column name="view_able" value="true"/>
            <column name="create_time" value="now()"/>
        </insert>
    </changeSet>
</databaseChangeLog>
