<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="001-createGuestBookTable" author="dvalfrid">
        <createSequence sequenceName="guestBookSequence" startValue="1"/>

        <createTable tableName="guestBook">
            <column name="id" type="number">
                <constraints nullable="false"/>
            </column>
            <column name="name" type="varchar">
                <constraints nullable="false"/>
            </column>
            <column name="createTime" type="timestamp">
                <constraints nullable="false"/>
            </column>
            <column name="viewAble" type="boolean">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addPrimaryKey tableName="guestBook" columnNames="id"/>

    </changeSet>

    <changeSet id="002-createEntryTable" author="dvalfrid">
        <createSequence sequenceName="entrySequence" startValue="1"/>

        <createTable tableName="entry">
            <column name="id" type="number">
                <constraints nullable="false"/>
            </column>
            <column name="name" type="varchar">
                <constraints nullable="false"/>
            </column>
            <column name="headline" type="varchar">
                <constraints nullable="false"/>
            </column>
            <column name="message" type="clob">
                <constraints nullable="false"/>
            </column>
            <column name="city" type="varchar">
                <constraints nullable="false"/>
            </column>
            <column name="country" type="varchar">
                <constraints nullable="false"/>
            </column>
            <column name="email" type="varchar">
                <constraints nullable="false"/>
            </column>
            <column name="ip" type="varchar">
                <constraints nullable="false"/>
            </column>
            <column name="createTime" type="timestamp">
                <constraints nullable="false"/>
            </column>
            <column name="viewAble" type="boolean">
                <constraints nullable="false"/>
            </column>
            <column name="guestBookId" type="number">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addPrimaryKey tableName="entry" columnNames="id"/>

        <createIndex tableName="entry" indexName="entryCreateTimeIndex">
            <column name="createTime"/>
        </createIndex>
    </changeSet>
</databaseChangeLog>
