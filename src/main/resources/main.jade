          div(class="col-sm-5" id="entry-div")
            ol#entries
              for entry in entries
                li  #{entry.name}
                li  #{entry.headline}
                li  #{entry.email}
                li  #{entry.city}
                li  #{entry.country}
                li  #{entry.message}
                li(id="entry-date") #{entry.createTime}




  
          



        


